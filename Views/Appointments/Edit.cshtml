@model Health_Hub.Models.Domain.Appointment

<div class="container mt-5">
    <h2 class="text-center mb-4">Edit Appointment</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div id="success-alert" class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Display validation summary -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-action="EditPost" method="post" novalidate>
        <div class="row g-3">
            <!-- Patient ID -->
            <div class="col-md-6">
                <label asp-for="PatientID" class="form-label fw-bold">Patient ID</label>
                <input asp-for="PatientID" class="form-control" readonly />
                <span asp-validation-for="PatientID" class="text-danger"></span>
            </div>

            <!-- Doctor Name -->
            <div class="col-md-6">
                <label class="form-label fw-bold">Doctor Name</label>
                <input type="text" class="form-control" value="@Model.Doctor?.Name ?? " N /A"" readonly />
                <input type="hidden" asp-for="DoctorID" />
                <span asp-validation-for="DoctorID" class="text-danger"></span>
            </div>

            <!-- Hospital Name -->
            <div class="col-md-6">
                <label class="form-label fw-bold">Hospital Name</label>
                <input type="text" class="form-control" value="@Model.DoctorHospital?.Hospital?.Name ?? " N /A"" readonly />
                <input type="hidden" name="SelectedDoctorHospitalID" value="@Model.DoctorHospital?.DoctorHospitalID ?? 0" />
                <span asp-validation-for="SelectedDoctorHospitalID" class="text-danger"></span>
            </div>

            <!-- Status -->
            <div class="col-md-6">
                <label class="form-label fw-bold">Status</label>
                <input type="text" class="form-control" value="@Model.Status?.Value ?? " N /A"" readonly />
                <input type="hidden" name="StatusID" value="@Model.Status?.LookupID ?? 0" />
                <span asp-validation-for="StatusID" class="text-danger"></span>
            </div>

            <!-- Time Slot -->
            <div class="col-md-6">
                <label asp-for="TimeSlot" class="form-label fw-bold">Time Slot</label>
                <input asp-for="TimeSlot" class="form-control" readonly />
                <span asp-validation-for="TimeSlot" class="text-danger"></span>
            </div>

            <!-- Prescriptions -->
            <div class="col-md-12">
                <label asp-for="Prescriptions" class="form-label fw-bold">Prescriptions</label>
                <textarea asp-for="Prescriptions" class="form-control" rows="4" required></textarea>
                <span asp-validation-for="Prescriptions" class="text-danger"></span>
            </div>

            <!-- Test Suggested -->
            <div class="col-md-12">
                <label asp-for="TestSuggested" class="form-label fw-bold">Test Suggested</label>
                <textarea asp-for="TestSuggested" class="form-control" rows="4" required></textarea>
                <span asp-validation-for="TestSuggested" class="text-danger"></span>
            </div>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-between mt-4">
            <a asp-action="ManageAppointments" class="btn btn-outline-danger btn-rounded">Cancel</a>
            <button type="submit" class="btn btn-success btn-rounded">Save Changes</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Show the success message and redirect after 3 seconds
        const successAlert = document.getElementById("success-alert");
        if (successAlert) {
            setTimeout(() => {
                window.location.href = '@Url.Action("CompletedAppointments", "Appointments")';
            }, 3000); // Wait for 3 seconds before redirecting
        }
    </script>
}
