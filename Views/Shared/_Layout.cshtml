<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Health Hub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
 <body id="top">

    <!-- Header Section with Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: #f8f9fa;">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="../Images/SquareLogo.png" alt="Health Hub Logo" class="img-fluid logoImage">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarmain" aria-controls="navbarmain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Updated for right alignment -->
                <div class="collapse navbar-collapse ms-auto" id="navbarmain">
                    <!-- Changed this line -->
                    <ul class="navbar-nav ms-auto">
                        <!-- Dropdown for Departments -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="dropdown02" data-bs-toggle="dropdown">Departments</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown02">
                                @if (ViewBag.Departments != null)
                                {
                                    foreach (var department in ViewBag.Departments)
                                    {
                                        <li><a class="dropdown-item" href="#">@department</a></li>
                                    }
                                }
                            </ul>
                        </li>

                        <!-- Link for Doctors -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Doctors", "Doctors")">Doctors</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="#">About Us</a>
                        </li>

                        <!-- Right-aligned Buttons -->
                        <li class="nav-item">
                            <a class="btn btn-outline-primary ms-2" asp-controller="SignUpDoctor" asp-action="SignUpDoctor">Join as Doctor</a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-outline-success ms-2" asp-controller="SignUpPatient" asp-action="SignUpPatient">SignUp/LogIn</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <!-- Main content -->
    <div class="container">
        <main role="main" class="pb-3">
                    @RenderBody()
        </main>
    </div>

    <!-- Footer Section -->
    <footer class="footer section gray-bg mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="widget mb-5 mb-lg-0">
                        <img src="../Images/SquareLogo.png" alt="Health Hub Logo" class="img-fluid footer-logo">
                        <p>Learn more about us and get our latest updates.</p>
                    </div>
                </div>
                <div class="col-lg-2">
                    <h4 class="mb-3">Support</h4>
                    <ul class="list-unstyled footer-menu">
                        <li><a href="#">About Us</a></li>
                    </ul>
                </div>
                <div class="col-lg-3">
                    <h4 class="mb-3">Get in Touch</h4>
                    <p>Email us at: <a href="mailto:healthhub@gmail.com">healthhub@gmail.com</a></p>
                </div>
            </div>
            <div class="footer-btm py-3">
                <p class="text-center">&copy; 2024 Health Hub. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
