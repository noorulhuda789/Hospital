<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Health_Hub</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/DoctorCard.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Health_Hub.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

</head>
<body id="top">


<header>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: #f8f9fa;">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="../Images/SquareLogo.png" alt="Health Hub Logo" class="img-fluid logoImage">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarmain" aria-controls="navbarmain" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="collapse navbar-collapse ms-auto" id="navbarmain">
                <ul class="navbar-nav ms-auto"> <!-- Align items to the left -->
                    <!-- Dropdown for Departments -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="dropdown02" data-toggle="dropdown">Departments</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown02">
                                @if (ViewBag.Departments != null)
                                {
                                    foreach (var department in ViewBag.Departments)
                                    {

                                        <li><a class="dropdown-item" href="#">@department</a></li>
                                    }
                                }
                            </ul>
                        </li>

						<!-- Link for Doctors -->
						<li class="nav-item">
							<a class="nav-link" href="@Url.Action("Doctors", "Doctors")">Doctors</a>
						</li>

                    <!-- Link for Scheduled Appointments -->
                    <li class="nav-item">
                        <a class="nav-link" href="#">Scheduled Appointments</a>
                    </li>

                    <!-- Link for Previous Appointments -->
                    <li class="nav-item">
                        <a class="nav-link" href="#">Previous Appointments</a>
                    </li>


                    <!-- Link for About Us -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("AboutUs","Home")">About Us</a>
                    </li>
                </ul>

                <!-- Profile Icon with Dropdown -->


					<ul class="navbar-nav ml-auto">
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" id="profileDropdown" data-toggle="dropdown">
								<img src="../Images/user.jpg" alt="Profile Icon" class="img-fluid profile-icon" style="width: 35px; border-radius: 50%;">
							</a>
							<ul class="dropdown-menu dropdown-menu-right" aria-labelledby="profileDropdown">
								<li><a class="dropdown-item" href="#">View Profile</a></li>
								<li class="nav-item">
									<a class="nav-link" href="@Url.Action("Notifications","Home", new { personId = ViewBag.User.PersonID })">Notifications</a>
								</li>
								<li><a class="dropdown-item" href="/">Logout</a></li>
							</ul>
						</li>
					</ul>
            </div>
        </div>
    </nav>
</header>




	<div class="container">
		<main role="main" class="pb-3">
							@RenderBody()
		</main>
	</div>

	<!-- Footer Section -->
	<footer class="footer section gray-bg mt-5">
		<div class="container">
			<div class="row">
				<div class="col-lg-4">
					<div class="widget mb-5 mb-lg-0">
						<img src="../Images/SquareLogo.png" alt="Health Hub Logo" class="img-fluid footer-logo">
						<p>Learn more about us and get our latest updates.</p>
					</div>
				</div>
				<div class="col-lg-2">
					<h4 class="mb-3">Support</h4>
					<ul class="list-unstyled footer-menu">
						<li><a href="#">About Us</a></li>
					</ul>
				</div>
				<div class="col-lg-3">
					<h4 class="mb-3">Get in Touch</h4>
					<p>Email us at: <a href="mailto:healthhub@gmail.com">healthhub@gmail.com</a></p>
				</div>
			</div>
			<div class="footer-btm py-3">
				<p class="text-center">&copy; 2024 Health Hub. All rights reserved.</p>
			</div>
		</div>
	</footer>


