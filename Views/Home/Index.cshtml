@{
    ViewData["Title"] = "Home Page";
}
<!-- Search Section Start -->
<section class="search-section">
	<div class="container">
		<div class="row align-items-center">
			<!-- Left Side: Greeting and Message -->
			<div class="col-md-6">
				<h2>Hello Guest,</h2>
				<p>Find the best doctor near you</p>
			</div>
			<!-- Right Side: Search Bar with Dropdown and Button -->
			<div class="col-md-6">
				<div class="search-bar d-flex">
					<select class="form-control">
						<option value="general">General Physician</option>
						<option value="dentist">Dentist</option>
						<option value="cardiologist">Cardiologist</option>
						<!-- Add more options as needed -->
					</select>
					<input type="text" class="form-control" placeholder="Enter location...">
					<button class="btn btn-main-2">Search</button>
				</div>
			</div>
		</div>
	</div>
</section>

<!-- Slider Start -->
<section class="banner">
	<div class="container">
		<div class="row">
			<div class="col-lg-6 col-md-12 col-xl-7">
				<div class="block">
					<div class="divider mb-3"></div>
					<span class="text-uppercase text-sm letter-spacing "> Health care solution</span>
					<h1 class="mb-3 mt-3">Your most trusted health partner</h1>

					<p class="mb-4 pr-5">Connecting Patients and Doctors for Seamless, Accessible Healthcare Anytime, Anywhere.</p>
					<div class="btn-container ">
						<a href="appoinment.html" target="_blank" class="btn btn-main-2 btn-icon btn-round-full">Make appoinment <i class="icofont-simple-right ml-2  "></i></a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

