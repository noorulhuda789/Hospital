@{
	ViewData["Title"] = "Home Page";
}
<!-- Search Section Start -->
<section class="search-section">
	<div class="container">
		<div class="row align-items-center">
			<!-- Left Side: Greeting and Message -->
			<div class="col-md-6">
				@if (ViewBag.User == null)
				{
					<h2>Hello Guest,</h2>
				}
				else
				{
					<h2>Hello @ViewBag.User.Name,</h2>
				}

				
				<p>Find the best doctor near you</p>
			</div>
		</div>
	</div>
</section>

<!-- Slider Start -->
<section class="banner">
	<div class="container">
		<div class="row">
			<div class="col-lg-6 col-md-12 col-xl-7">
				<div class="block">
					<div class="divider mb-3"></div>
					<span class="text-uppercase text-sm letter-spacing "> Health care solution</span>
					<h1 class="mb-3 mt-3">Your most trusted health partner</h1>

					<p class="mb-4 pr-5">Connecting Patients and Doctors for Seamless, Accessible Healthcare Anytime, Anywhere.</p>
			
				</div>
			</div>
		</div>
	</div>




</section>
<!-- Top Doctors Section Start -->
@{
	var topDoctors = ViewBag.TopDoctors as List<Health_Hub.Models.ViewModels.DoctorVM>;
}
<section class="doctor-cards">
	<div class="container">
		<h2>Top Doctors</h2>
		<div class="row">
			@foreach (var doctor in ViewBag.TopDoctors)
			{
				<div class="col-md-4">
					<div class="card">
						<img src="@doctor.ProfileImage" class="card-img-top" alt="@doctor.Name's Profile">
						<div class="card-body">
							<h5 class="card-title">@doctor.Name</h5>
							<p class="card-text">Specialization: @doctor.Specialization</p>
							<p class="card-text">
								Rating:
								<span class="rating">
									@for (int i = 1; i <= 5; i++)
									{
										if (i <= doctor.Rating)
										{
											<i class="fas fa-star"></i>
										}
										else
										{
											<i class="far fa-star"></i>
										}
									}
								</span>
							</p>
							<a href="@Url.Action("DoctorSingle", "Doctors", new { id = doctor.PersonID })" class="btn btn-primary">View Profile</a>
						</div>
					</div>
				</div>
			}
		</div>
		<a href="@Url.Action("Doctors", "Doctors")" class="btn btn-secondary">View All Doctors</a>
	</div>
</section>
